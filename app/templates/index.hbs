
<div class="container">
  <div class="col-sm-8">
    <ul>
      {{#each model.posts as |post|}}
        {{post-tile post=post}}
      {{/each}}
    </ul>

    {{new-post save2="save3"}}

    {{#link-to 'about'}}About{{/link-to}}
    {{#link-to 'contact'}}Click here to contact us.{{/link-to}}
  </div>

  <div class="col-sm-4">
    {{recent-comments comments=model.comments}}
    {{find-posts tags=model.tags}}
  </div>
</div>
