{{#if addNewComment}}
  <h1>New Comment</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="name">Name</label>
          {{input value=name id="name"}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input type="date" value=date id="date"}}
        </div>

        <div class="form-group">
          <label for="text">Comment</label>
          {{input value=text id="text"}}
        </div>
        <button {{action 'save1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-success" {{action 'commentFormShow'}}>Add New Comment</button>
{{/if}}
