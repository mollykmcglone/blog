{{#if updateCommentForm}}
  <h4>Update {{comment.title}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="name">Name</label>
        {{input value=name id="name" placeholder=comment.name}}
      </div>

      <div class="form-group">
        <label for="text">Text</label>
        {{input value=text id="text" placeholder=comment.text}}
      </div>

      <div class="form-group">
        <label for="date">Date</label>
        {{input value=date id="date" placeholder=comment.date}}
      </div>
      <button {{action 'update' comment}}>Save</button>
    </form>
  </div>
{{else}}
  <button class="btn btn-primary" {{action 'updateCommentForm'}}>Update this Comment</button>
{{/if}}
