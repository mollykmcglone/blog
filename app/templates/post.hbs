<div class="row">
  <div class="col-sm-4">
    <h1> {{model.title}}</h1>
    <ul>
      <h3> by {{model.author}}</h3>
      <p> on {{model.date}}</p>
      <p>Tags:
      {{#each model.tags as |tag|}}
        {{tag.text}},
      {{/each}}
    </p>
    </ul>
    <button class="btn btn-danger" {{action 'delete' post}}>Delete this Post</button>
    {{update-post post=model update="update"}}
  </div>
  <div class="col-sm-6">
    <p><img src={{model.image}} alt={{model.title}} ></p>
  </div>
</div>

{{post-detail post=model}}

{{new-comment save2="save3" post=model}}
{{new-tag saveTag2="saveTag3" post=model}}
